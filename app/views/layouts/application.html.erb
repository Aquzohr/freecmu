<!DOCTYPE html>
<html>
  <head>
    <title>FreecmuVoting</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="shortcut icon" href="<%= image_path("vote-icon-9.png") %>"  />
    

  </head>

  <body data-spy="scroll" data-target=".navbar" data-offset="50">

	<nav class="navbar navbar-default navbar-fixed-top">
	  <div class="container">
	    <div class="navbar-header">
	        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>
	          <span class="icon-bar"></span>                        
	      </button>
	      <a class="navbar-brand " href="<%= root_path %>" ><i class="fa fa-cubes" aria-hidden="true"></i> Free CMU Voting Application</a>
	    </div>
	    <div>
	      <div class="collapse navbar-collapse " id="myNavbar">

	        <ul class="nav navbar-nav navbar-right">

	          <li>  
			  	<% if I18n.locale==I18n.default_locale %>
			  		<%= link_to locale: :en do%>
			  			<span ><i class="fa fa-globe fa-2x center-icon" aria-hidden="true"></i> ENG</span>
			  		<% end %>
			  	<% else %>
			  		<%= link_to locale: :th do%>
			  			<span><i class="fa fa-globe fa-2x center-icon" aria-hidden="true"></i> TH</span>
			  		<% end %>
			  	<% end %>
			  </li>
	      
	        <% if current_user %>

	          <li>
	          <a href="<%= new_subject_path %>"> <i class="fa fa-plus-square fa-2x center-icon" aria-hidden="true"></i>  New Subject</a>
	          </li>

	        <% end %>

			  <% if can? :access, :rails_admin  %>
			  	<li>
			  	<a href="<%= rails_admin_path %>"> <i class="fa fa-cogs fa-2x center-icon" aria-hidden="true"></i>  Admin</a>
			  		
			  	</li>
			  <% end %>

		      <% if current_user %>
				<li>
				<%= link_to sign_out_path, "data-turbolinks": false do %>
					 <span>
					 <i class="fa fa-sign-out fa-2x center-icon" aria-hidden="true"></i>
					 Sign Out
					 </span> 
				<% end %>
				</li>		        

			  <% else %>
			    <li>
			    	<%= link_to '/auth/facebook', class: "" do %>
			    		<span><i class="fa fa-sign-in fa-2x center-icon" aria-hidden="true"></i> Sign In</span> 
			    	<% end %> 
			    </li>
			  <% end %>

			  <% if current_user %>

				<li>
				<%= link_to '#', "data-turbolinks": false do %>
					<span>
						<%= image_tag current_user.image_url, size: "36x36" %>
						<%= current_user.name %>
					</span> 
				<% end %>
				</li>

			  <% end %>
			  

	        </ul>

	      </div>
	    </div>
	  </div>
	</nav> 

	<br><br><br>  

  	<div class="container">
  		<%= yield %>
  	</div>

  	<script>
	  window.fbAsyncInit = function() {
	    FB.init({
	      appId      : '233569517104162',
	      xfbml      : true,
	      version    : 'v2.8'
	    });
	    FB.AppEvents.logPageView();
	  };

	  (function(d, s, id){
	     var js, fjs = d.getElementsByTagName(s)[0];
	     if (d.getElementById(id)) {return;}
	     js = d.createElement(s); js.id = id;
	     js.src = "//connect.facebook.net/en_US/sdk.js";
	     fjs.parentNode.insertBefore(js, fjs);
	   }(document, 'script', 'facebook-jssdk'));
	</script>

  </body>
</html>
